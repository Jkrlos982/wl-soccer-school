# WL-School Environment Configuration
# Copy this file to .env and update the values accordingly

# Application
APP_NAME="WL-School"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=America/Bogota

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=wl_school
DB_USERNAME=root
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@wl-school.com
MAIL_FROM_NAME="WL-School"

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=wl-school-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-key
PUSHER_APP_SECRET=your-pusher-secret
PUSHER_APP_CLUSTER=mt1

# Payment Gateway Configuration
# Stripe
STRIPE_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# SMS Configuration
# Twilio
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token
TWILIO_FROM=+1234567890

# Social Login Configuration
# Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Facebook
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/auth/facebook/callback

# Microservices URLs
API_GATEWAY_URL=http://localhost:8000
AUTH_SERVICE_URL=http://localhost:8001
FINANCIAL_SERVICE_URL=http://localhost:8002
SPORTS_SERVICE_URL=http://localhost:8003
NOTIFICATION_SERVICE_URL=http://localhost:8004
MEDICAL_SERVICE_URL=http://localhost:8005
PAYROLL_SERVICE_URL=http://localhost:8006
REPORT_SERVICE_URL=http://localhost:8007
CALENDAR_SERVICE_URL=http://localhost:8008
CUSTOMIZATION_SERVICE_URL=http://localhost:8009

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_PUSHER_KEY=your-pusher-key
REACT_APP_PUSHER_CLUSTER=mt1
REACT_APP_GOOGLE_MAPS_KEY=your-google-maps-key

# Security
APP_KEY=base64:your-32-character-secret-key
SESSION_LIFETIME=120
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:3000

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# Broadcasting
BROADCAST_DRIVER=pusher

# File Storage
FILESYSTEM_DISK=s3

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Docker Configuration
DOCKER_NETWORK=wl-school-network
DOCKER_SUBNET=172.20.0.0/16

# Development Tools
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true